// look at how many environments have conflicting object names
options(tibble.print_min = Inf)
envs <- search() %>% setNames(., .)
fns <- lapply(envs, ls)
fns_by_env <- data_frame(
env = rep.int(names(fns), lengths(fns)),
fn  = unlist(fns))
fns_by_env %>% 
group_by(fn) %>% 
tally() %>% 
filter(n > 1) %>% 
inner_join(fns_by_env)

